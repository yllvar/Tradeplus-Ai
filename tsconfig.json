{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@constants/*": ["./constants/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16",
    "module": "node16",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["esnext"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "moduleDetection": "force"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "global.d.ts"
  ],
  "exclude": ["node_modules"]
}
